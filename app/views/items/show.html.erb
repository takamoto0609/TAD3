<div class="items_index">
  <div class="items_index_L">
    <div class="items_index_L_1">
      <h4>何が欲しい？</h4>
      <%= form_with url: search_items_path, method: :get, local: true do |f| %>
      <%= f.text_field :input_name, class:"search_form"%>
      <%= f.submit :"探す" %>
      <p>受け渡し場所でも検索できます</p>
      <% end %>
    </div>

    <div class="show_item">
      <b><%= @item.name %></b><br>
      1個　<%= @item.point %>ポイント(残り　<%= @item.stock %>個)<br>
      受け渡し場所：<%= @item.address %><br>
      出品者：<%= @item.user.email %><br>
      コメント：<%= @item.comment %><br>
      <%= link_to "問い合わせ", new_item_chat_path(@item) %>
    </div>
  </div>

  <div class="items_index_R">
    <%# 地図 %>
    <%= render "items/map6" %>
    <%# 地図 %>

    <%= render "items/R" %>

  </div>
</div>